apiVersion: apps/v1
kind: Deployment
metadata:
  name: osg-submit
  namespace: osg-services
spec:
  replicas: 1
  selector:
    matchLabels:
      k8s-app: osg-submit
  template:
    metadata:
      labels:
        k8s-app: osg-submit
    spec:
      containers:
      - env:
        - name: CONDOR_HOST
          value: "flock.opensciencegrid.org" 
        name: osg-submit
        image: htcondor/submit:el7
        ports:
        - containerPort: 39618 
        volumeMounts:
        - mountPath: /etc/gwms-frontend/proxies.ini
          subPath: proxies.ini
          name: proxies-config
        - mountPath: /etc/gwms-frontend/frontend.xml.k8s
          subPath: frontend.xml.k8s
          name: fexml-config
        resources:
          limits:
            cpu: 4
            memory: 3Gi
          requests:
            cpu: 3
            memory: 1Gi
      restartPolicy: Always
      volumes:
        - name: jlab-storage
          persistentVolumeClaim:
            claimName: jlab-storage
        - name: proxycerts-secret
          secret:
            secretName: jlabproxycerts
            defaultMode: 0600      #Right File Permissions so can only be read by one node.
        - name:  vomscerts-secret
          secret:
            secretName: jlabvomscerts
            defaultMode: 0600
        - name: proxies-config
          configMap:
             name: jlab-proxies-config
        - name: fexml-config
          configMap:
             name: jlab-fexml
        - name:  eicvomscerts-secret
          secret:
            secretName: eicvomscerts
            defaultMode: 0600
